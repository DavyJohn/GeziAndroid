<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/maincolor"
        android:id="@+id/home_confirm_info_toolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="确认信息"
            android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ji_icon"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textColor="@color/SomeTextColor"
                        android:layout_marginTop="8dp"
                        android:textSize="14sp"
                        android:id="@+id/home_confirm_info_ji_name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/SomeTextColor"
                        android:text="phone"
                        android:textSize="14sp"
                        android:layout_above="@+id/home_confirm_info_ji_address"
                        android:layout_toRightOf="@+id/home_confirm_info_ji_address"
                        android:layout_toEndOf="@+id/home_confirm_info_ji_address"
                        android:layout_marginLeft="32dp"
                        android:layout_marginStart="32dp"
                        android:id="@+id/home_confirm_info_ji_phone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/SomeTextColor"
                        android:text="address"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:id="@+id/home_confirm_info_ji_address"
                        android:layout_below="@+id/home_confirm_info_ji_name"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/shou_icon"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textColor="@color/shouTextColor"
                        android:layout_marginTop="8dp"
                        android:textSize="14sp"
                        android:id="@+id/home_confirm_info_shou_name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/shouTextColor"
                        android:text="phone"
                        android:textSize="14sp"
                        android:layout_above="@+id/home_confirm_info_shou_address"
                        android:layout_toRightOf="@+id/home_confirm_info_shou_address"
                        android:layout_toEndOf="@+id/home_confirm_info_shou_address"
                        android:layout_marginLeft="32dp"
                        android:layout_marginStart="32dp"
                        android:id="@+id/home_confirm_info_shou_phone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/shouTextColor"
                        android:text="address"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:id="@+id/home_confirm_info_shou_address"
                        android:layout_below="@+id/home_confirm_info_shou_name"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物品详情"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_black"
                    android:textSize="14sp"
                    android:text="物品类型"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文件卷宗"
                    android:textColor="@color/text_color_black"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_black"
                    android:textSize="14sp"
                    android:text="物品类型"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文件卷宗"
                    android:textColor="@color/text_color_black"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物品详情"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_black"
                    android:textSize="14sp"
                    android:text="所选快递"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="德邦物流"
                    android:textColor="@color/text_color_black"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_black"
                    android:textSize="14sp"
                    android:text="快递运费"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10元"
                    android:textColor="@color/text_color_black"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_black"
                    android:textSize="14sp"
                    android:text="保价金额"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5元"
                    android:textColor="@color/text_color_black"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_black"
                    android:textSize="14sp"
                    android:text="备注信息"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_black"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/SomeTextColor"
            android:text="扫描纸质二维码完成支付"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:layout_marginLeft="17dp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/pay_btn_style"
            android:layout_gravity="center"
            android:layout_marginLeft="44dp"/>
    </LinearLayout>

</LinearLayout>