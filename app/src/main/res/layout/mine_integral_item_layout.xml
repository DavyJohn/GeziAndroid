<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.geziwulian.geziandroid.customs.CustomImageView
            android:layout_width="75dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/maincolor"
            android:scaleType="fitXY"
            app:radius="8dp"
            app:shape_type="rectangle"
            android:id="@+id/mine_integral_goods_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginRight="46dp"
            android:layout_marginLeft="14dp"
            android:text="的撒娇开绿灯撒加了大师级的卢卡斯就得啦是大家ask垃圾打蜡机大色狼"
            android:textColor="@color/text_color_black"
            android:layout_alignTop="@+id/mine_integral_goods_image"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/mine_integral_goods_image"
            android:layout_toEndOf="@+id/mine_integral_goods_image"
            android:id="@+id/mine_integral_goods_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/text_color_black"
            android:text="06-22"
            android:layout_alignBottom="@+id/mine_integral_goods_image"
            android:layout_alignLeft="@+id/mine_integral_goods_title"
            android:layout_alignStart="@+id/mine_integral_goods_title"
            android:id="@+id/mine_integral_time"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/maincolor"
            android:text="-60"
            android:textSize="25sp"
            android:id="@+id/mine_integral_price"
            android:layout_alignBaseline="@+id/mine_integral_time"
            android:layout_alignBottom="@+id/mine_integral_time"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp"/>

    </RelativeLayout>



</LinearLayout>